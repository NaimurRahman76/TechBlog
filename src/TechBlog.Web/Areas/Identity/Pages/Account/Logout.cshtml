@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <div class="card shadow">
            <div class="card-body p-4 text-center">
                <div class="mb-4">
                    <i class="fas fa-sign-out-alt text-primary" style="font-size: 3rem;"></i>
                    <h2 class="fw-bold text-primary mt-3">Logged Out</h2>
                    <p class="text-muted">You have successfully logged out.</p>
                </div>
                
                <div class="d-grid gap-2">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-primary">
                        <i class="fas fa-home me-2"></i>Return to Home
                    </a>
                    <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-outline-primary">
                        <i class="fas fa-sign-in-alt me-2"></i>Sign In Again
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
