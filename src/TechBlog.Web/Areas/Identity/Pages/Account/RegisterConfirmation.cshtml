@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Register Confirmation";
}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-body text-center p-5">
                    <div class="mb-4">
                        <i class="fas fa-envelope-open-text text-primary" style="font-size: 5rem;"></i>
                    </div>
                    
                    <h1 class="mb-3">Check Your Email</h1>
                    
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">
                            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                        </div>
                    }
                    
                    <p class="lead mb-4">
                        We've sent a verification email to <strong>@Model.Email</strong>
                    </p>
                    
                    <div class="alert alert-info text-start">
                        <h5><i class="fas fa-info-circle me-2"></i>Next Steps:</h5>
                        <ol class="mb-0">
                            <li>Check your email inbox (and spam folder)</li>
                            <li>Click the verification link in the email</li>
                            <li>Once verified, you can log in to your account</li>
                        </ol>
                    </div>
                    
                    <div class="alert alert-warning text-start">
                        <i class="fas fa-clock me-2"></i>
                        <strong>Note:</strong> The verification link will expire in 24 hours.
                    </div>
                    
                    <hr class="my-4">
                    
                    <div class="row g-3">
                        <div class="col-md-6">
                            <a asp-page="./ResendEmailConfirmation" class="btn btn-outline-primary btn-lg w-100">
                                <i class="fas fa-redo me-2"></i>Resend Email
                            </a>
                        </div>
                        <div class="col-md-6">
                            <a asp-page="./Login" class="btn btn-primary btn-lg w-100">
                                <i class="fas fa-sign-in-alt me-2"></i>Go to Login
                            </a>
                        </div>
                    </div>
                    
                    <div class="mt-4 text-muted">
                        <small>
                            <i class="fas fa-question-circle me-1"></i>
                            Didn't receive the email? Check your spam folder or 
                            <a asp-page="./ResendEmailConfirmation">click here to resend</a>.
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
