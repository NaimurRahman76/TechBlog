@page
@model ForgotPasswordConfirmationModel
@{
    ViewData["Title"] = "Forgot Password Confirmation";
}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-body text-center p-5">
                    <div class="mb-4">
                        <i class="fas fa-envelope-open-text text-danger" style="font-size: 5rem;"></i>
                    </div>
                    
                    <h1 class="mb-3">Check Your Email</h1>
                    
                    <p class="lead mb-4">
                        If your email address exists in our system and is verified, you will receive a password reset link shortly.
                    </p>
                    
                    <div class="alert alert-info text-start">
                        <h5><i class="fas fa-info-circle me-2"></i>Next Steps:</h5>
                        <ol class="mb-0">
                            <li>Check your email inbox (and spam folder)</li>
                            <li>Click the password reset link in the email</li>
                            <li>Create a new password for your account</li>
                            <li>Log in with your new password</li>
                        </ol>
                    </div>
                    
                    <div class="alert alert-warning text-start">
                        <i class="fas fa-clock me-2"></i>
                        <strong>Note:</strong> The password reset link will expire in 1 hour for security reasons.
                    </div>
                    
                    <hr class="my-4">
                    
                    <div class="row g-3">
                        <div class="col-md-6">
                            <a asp-page="./ForgotPassword" class="btn btn-outline-danger btn-lg w-100">
                                <i class="fas fa-redo me-2"></i>Resend Link
                            </a>
                        </div>
                        <div class="col-md-6">
                            <a asp-page="./Login" class="btn btn-primary btn-lg w-100">
                                <i class="fas fa-sign-in-alt me-2"></i>Go to Login
                            </a>
                        </div>
                    </div>
                    
                    <div class="mt-4 text-muted">
                        <small>
                            <i class="fas fa-question-circle me-1"></i>
                            Didn't receive the email? Check your spam folder or 
                            <a asp-page="./ForgotPassword">click here to try again</a>.
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
