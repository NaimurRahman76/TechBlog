@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Confirm Email";
}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body text-center p-5">
                    @if (!string.IsNullOrEmpty(Model.StatusMessage))
                    {
                        @if (Model.StatusMessage.Contains("Thank you"))
                        {
                            <div class="mb-4">
                                <i class="fas fa-check-circle text-success" style="font-size: 4rem;"></i>
                            </div>
                            <h2 class="text-success mb-3">Email Confirmed!</h2>
                            <p class="lead">@Model.StatusMessage</p>
                            <div class="mt-4">
                                <a asp-page="./Login" class="btn btn-primary btn-lg">
                                    <i class="fas fa-sign-in-alt me-2"></i>Go to Login
                                </a>
                            </div>
                        }
                        else
                        {
                            <div class="mb-4">
                                <i class="fas fa-exclamation-circle text-danger" style="font-size: 4rem;"></i>
                            </div>
                            <h2 class="text-danger mb-3">Confirmation Failed</h2>
                            <p class="lead">@Model.StatusMessage</p>
                            <div class="mt-4">
                                <a asp-page="./ResendEmailConfirmation" class="btn btn-primary btn-lg">
                                    <i class="fas fa-redo me-2"></i>Resend Confirmation Email
                                </a>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="mb-4">
                            <i class="fas fa-spinner fa-spin text-primary" style="font-size: 4rem;"></i>
                        </div>
                        <h2 class="mb-3">Confirming Your Email...</h2>
                        <p class="lead">Please wait while we verify your email address.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
