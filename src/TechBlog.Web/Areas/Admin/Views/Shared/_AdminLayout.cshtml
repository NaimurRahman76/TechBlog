<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TechBlog Admin</title>
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    
    <!-- Custom admin styles -->
    <link href="/css/admin.css" rel="stylesheet" />
    
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <div class="bg-dark text-white" id="sidebar">
            <div class="p-3">
                <a href="/" class="d-flex align-items-center text-white text-decoration-none">
                    <span class="fs-4">TechBlog</span>
                </a>
                <hr>
                <ul class="nav nav-pills flex-column mb-auto">
                    <li class="nav-item">
                        <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="nav-link text-white @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Dashboard" ? "active" : "") ">
                            <i class="fas fa-tachometer-alt me-2"></i> Dashboard
                        </a>
                    </li>
                    <li>
                        <a asp-area="Admin" asp-controller="BlogPosts" asp-action="Index" class="nav-link text-white @(ViewContext.RouteData.Values["Controller"]?.ToString() == "BlogPosts" ? "active" : "")">
                            <i class="fas fa-file-alt me-2"></i> Posts
                        </a>
                    </li>
                    <li>
                        <a asp-area="Admin" asp-controller="Categories" asp-action="Index" class="nav-link text-white @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Categories" ? "active" : "")">
                            <i class="fas fa-folder me-2"></i> Categories
                        </a>
                    </li>
                    <li>
                        <a asp-area="Admin" asp-controller="Tags" asp-action="Index" class="nav-link text-white @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Tags" ? "active" : "")">
                            <i class="fas fa-tags me-2"></i> Tags
                        </a>
                    </li>
                    <li>
                        <a asp-area="Admin" asp-controller="Comments" asp-action="Index" class="nav-link text-white @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Comments" ? "active" : "")">
                            <i class="fas fa-comments me-2"></i> Comments
                            <span class="badge bg-danger rounded-pill ms-2" id="pending-comments-count">0</span>
                        </a>
                    </li>
                    <li>
                        <a asp-area="Admin" asp-controller="Users" asp-action="Index" class="nav-link text-white @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Users" ? "active" : "")">
                            <i class="fas fa-users me-2"></i> Users
                        </a>
                    </li>
                    <li class="mt-4">
                        <a href="/" class="nav-link text-white">
                            <i class="fas fa-arrow-left me-2"></i> Back to Site
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <!-- Main content -->
        <div class="flex-grow-1">
            <!-- Top navbar -->
            <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom">
                <div class="container-fluid">
                    <button class="btn btn-link text-dark d-md-none" id="sidebarToggle">
                        <i class="fas fa-bars"></i>
                    </button>
                    
                    <div class="d-flex align-items-center ms-auto">
                        <div class="dropdown">
                            <a href="#" class="d-flex align-items-center text-dark text-decoration-none dropdown-toggle" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                <img src="/img/avatar.png" alt="" width="32" height="32" class="rounded-circle me-2">
                                <strong>@User.Identity?.Name</strong>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="userDropdown">
                                <li><a class="dropdown-item" href="#"><i class="fas fa-user me-2"></i> Profile</a></li>
                                <li><a class="dropdown-item" href="#"><i class="fas fa-cog me-2"></i> Settings</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                        <button type="submit" class="dropdown-item"><i class="fas fa-sign-out-alt me-2"></i> Logout</button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>

            <!-- Page content -->
            <main role="main" class="p-4">
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @TempData["Success"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        @TempData["Error"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    
    <!-- Bootstrap 5 JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Custom admin scripts -->
    <script src="/js/admin.js"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
    
    <script>
        // Toggle sidebar on mobile
        document.getElementById('sidebarToggle').addEventListener('click', function() {
            document.getElementById('sidebar').classList.toggle('d-none');
        });
        
        // Update pending comments count
        $(document).ready(function() {
            $.get('/Admin/Comments/GetPendingCount', function(count) {
                if (count > 0) {
                    $('#pending-comments-count').text(count).show();
                } else {
                    $('#pending-comments-count').hide();
                }
            });
        });
    </script>
</body>
</html>
