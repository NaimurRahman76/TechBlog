@model TechBlog.Core.DTOs.CategoryDetailDto

@{
    ViewData["Title"] = "Category Details";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0 text-gray-800">
        <i class="fas fa-folder me-2"></i>Category Details
    </h1>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2">
            <i class="fas fa-edit me-2"></i>Edit Category
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to Categories
        </a>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card shadow">
            <div class="card-body">
                <div class="d-flex align-items-center mb-4">
                    <div class="bg-primary rounded-circle me-3 d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                        <i class="fas fa-folder text-white fa-2x"></i>
                    </div>
                    <div>
                        <h2 class="mb-1">@Model.Name</h2>
                        <code class="text-muted">@Model.Slug</code>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <div class="mb-4">
                        <h5>Description</h5>
                        <p class="text-muted">@Model.Description</p>
                    </div>
                }
                else
                {
                    <div class="mb-4">
                        <p class="text-muted fst-italic">No description provided for this category.</p>
                    </div>
                }

                <!-- Recent Posts in this Category -->
                <div class="mt-4">
                    <h5>Recent Posts (@Model.RecentPosts.Count)</h5>
                    @if (Model.RecentPosts.Any())
                    {
                        <div class="list-group mb-3">
                            @foreach (var post in Model.RecentPosts)
                            {
                                <a asp-controller="BlogPosts" asp-action="Details" asp-route-id="@post.Id" class="list-group-item list-group-item-action">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">@post.Title</h6>
                                        <small class="text-muted">@post.CreatedAt.ToString("MMM d, yyyy")</small>
                                    </div>
                                    <small class="text-muted">@(post.IsPublished ? "Published" : "Draft")</small>
                                </a>
                            }
                        </div>
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            This category contains <strong>@Model.PostsCount</strong> blog posts.
                            <a asp-controller="BlogPosts" asp-action="Index" asp-route-category="@Model.Id" class="alert-link">View all posts</a>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            No posts found in this category.
                            <a asp-controller="BlogPosts" asp-action="Create" asp-route-categoryId="@Model.Id" class="alert-link">Create the first post</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <!-- Category Statistics -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Statistics</h6>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <div class="d-flex justify-content-between mb-1">
                        <span class="text-muted">Total Posts</span>
                        <span class="font-weight-bold">@Model.PostsCount</span>
                    </div>
                </div>
                <div class="mb-3">
                    <div class="d-flex justify-content-between mb-1">
                        <span class="text-muted">Created</span>
                        <span class="font-weight-bold">@Model.CreatedAt.ToString("MMM d, yyyy")</span>
                    </div>
                </div>
                @if (Model.UpdatedAt.HasValue)
                {
                    <div class="mb-3">
                        <div class="d-flex justify-content-between mb-1">
                            <span class="text-muted">Last Updated</span>
                            <span class="font-weight-bold">@Model.UpdatedAt.Value.ToString("MMM d, yyyy")</span>
                        </div>
                    </div>
                }
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-6">
                        <div class="border-end">
                            <h4 class="text-primary">@Model.PostsCount</h4>
                            <small class="text-muted">Posts</small>
                        </div>
                    </div>
                    <div class="col-6">
                        <h4 class="text-success">0</h4>
                        <small class="text-muted">Views</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Category Information -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Category Information</h6>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <strong>Created:</strong><br>
                    <span class="text-muted">@Model.CreatedAt.ToString("MMMM dd, yyyy 'at' h:mm tt")</span>
                </div>
                @if (Model.UpdatedAt.HasValue)
                {
                    <div class="mb-3">
                        <strong>Last Updated:</strong><br>
                        <span class="text-muted">@Model.UpdatedAt.Value.ToString("MMMM dd, yyyy 'at' h:mm tt")</span>
                    </div>
                }
                <div class="mb-3">
                    <strong>URL Slug:</strong><br>
                    <code class="small">@Model.Slug</code>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="card shadow">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Quick Actions</h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                        <i class="fas fa-edit me-2"></i>Edit Category
                    </a>
                    
                    <a asp-controller="BlogPosts" asp-action="Create" asp-route-categoryId="@Model.Id" class="btn btn-success">
                        <i class="fas fa-plus me-2"></i>Create Post in Category
                    </a>
                    
                    <a asp-controller="BlogPosts" asp-action="Index" asp-route-category="@Model.Id" class="btn btn-outline-primary">
                        <i class="fas fa-list me-2"></i>View All Posts
                    </a>
                    
                    <a href="/Blog/Category/@Model.Slug" target="_blank" class="btn btn-outline-success">
                        <i class="fas fa-external-link-alt me-2"></i>View Live Category
                    </a>
                    
                    @if (Model.PostsCount == 0)
                    {
                        <button type="button" class="btn btn-outline-danger" onclick="confirmDelete()">
                            <i class="fas fa-trash me-2"></i>Delete Category
                        </button>
                    }
                    else
                    {
                        <button type="button" class="btn btn-outline-secondary" disabled title="Cannot delete category with posts">
                            <i class="fas fa-trash me-2"></i>Cannot Delete
                        </button>
                        <small class="text-muted">Remove all posts first to delete this category</small>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
@if (Model.PostsCount == 0)
{
    <div class="modal fade" id="deleteModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm Delete</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete the category "<strong>@Model.Name</strong>"?</p>
                    <p class="text-danger"><small>This action cannot be undone.</small></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form asp-action="Delete" asp-route-id="@Model.Id" method="post" style="display: inline;">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        function confirmDelete() {
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }
    </script>
}
