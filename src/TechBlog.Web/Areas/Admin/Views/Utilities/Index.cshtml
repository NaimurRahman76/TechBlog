@{
    ViewData["Title"] = "Utilities";
}
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-tools me-2"></i>Utilities
        </h1>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <div class="card shadow mb-4">
        <div class="card-header">
            <strong>Cache</strong>
        </div>
        <div class="card-body">
            <p>Clear all in-memory caches across the site. Use this after configuration changes or when you need to force-refresh cached lists.</p>
            <form asp-action="ClearCache" method="post">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-broom me-2"></i>Clear All Cache
                </button>
            </form>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-header">
            <strong>Logs</strong>
        </div>
        <div class="card-body">
            <p>Review application logs, filter by level or message, and clear logs when needed.</p>
            <a asp-area="Admin" asp-controller="Logs" asp-action="Index" class="btn btn-outline-primary">
                <i class="fas fa-clipboard-list me-2"></i>Open Logs
            </a>
        </div>
    </div>
</div>
