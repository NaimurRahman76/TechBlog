@model TechBlog.Core.Entities.EmailSettings

@{
    ViewData["Title"] = "Email Settings";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Email Settings</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
        <li class="breadcrumb-item active">Email Settings</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-envelope me-1"></i>
            SMTP Email Configuration
        </div>
        <div class="card-body">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="alert alert-info">
                <i class="fas fa-info-circle me-2"></i>
                Configure your SMTP server settings to enable email functionality including email verification for new users.
                <strong>Note:</strong> For Gmail, you may need to use an 
                <a href="https://support.google.com/accounts/answer/185833" target="_blank">App Password</a> instead of your regular password.
            </div>

            <form asp-action="Update" method="post" id="emailSettingsForm">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="CreatedAt" />
                
                <div class="form-check form-switch mb-4">
                    <input class="form-check-input" type="checkbox" asp-for="IsEnabled" id="isEnabled">
                    <label class="form-check-label" asp-for="IsEnabled">Enable Email Service</label>
                    <div class="form-text">Enable or disable the email service for the entire application.</div>
                </div>

                <div class="card mb-4">
                    <div class="card-header">
                        <i class="fas fa-server me-1"></i>
                        SMTP Server Settings
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-md-8">
                                <div class="form-group">
                                    <label asp-for="SmtpHost" class="form-label">SMTP Host <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" asp-for="SmtpHost" placeholder="smtp.gmail.com">
                                    <span asp-validation-for="SmtpHost" class="text-danger"></span>
                                    <div class="form-text">The SMTP server hostname (e.g., smtp.gmail.com, smtp.office365.com)</div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="SmtpPort" class="form-label">SMTP Port <span class="text-danger">*</span></label>
                                    <input type="number" class="form-control" asp-for="SmtpPort" placeholder="587">
                                    <span asp-validation-for="SmtpPort" class="text-danger"></span>
                                    <div class="form-text">Common: 587 (TLS), 465 (SSL), 25</div>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Username" class="form-label">Username <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" asp-for="Username" placeholder="your-email@gmail.com">
                                    <span asp-validation-for="Username" class="text-danger"></span>
                                    <div class="form-text">SMTP authentication username (usually your email)</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Password" class="form-label">Password <span class="text-danger">*</span></label>
                                    <input type="password" class="form-control" asp-for="Password" placeholder="Enter password">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                    <div class="form-text">SMTP authentication password (use App Password for Gmail)</div>
                                </div>
                            </div>
                        </div>

                        <div class="form-check form-switch mb-3">
                            <input class="form-check-input" type="checkbox" asp-for="EnableSsl">
                            <label class="form-check-label" asp-for="EnableSsl">Enable SSL/TLS</label>
                            <div class="form-text">Enable SSL/TLS encryption for secure email transmission (recommended)</div>
                        </div>
                    </div>
                </div>

                <div class="card mb-4">
                    <div class="card-header">
                        <i class="fas fa-paper-plane me-1"></i>
                        Email Sender Information
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="FromEmail" class="form-label">From Email <span class="text-danger">*</span></label>
                                    <input type="email" class="form-control" asp-for="FromEmail" placeholder="noreply@techblog.com">
                                    <span asp-validation-for="FromEmail" class="text-danger"></span>
                                    <div class="form-text">The email address that will appear as the sender</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="FromName" class="form-label">From Name <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" asp-for="FromName" placeholder="TechBlog">
                                    <span asp-validation-for="FromName" class="text-danger"></span>
                                    <div class="form-text">The name that will appear as the sender</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card mb-4">
                    <div class="card-header">
                        <i class="fas fa-check-circle me-1"></i>
                        Email Verification Settings
                    </div>
                    <div class="card-body">
                        <div class="form-check form-switch mb-3">
                            <input class="form-check-input" type="checkbox" asp-for="EnableEmailVerification">
                            <label class="form-check-label" asp-for="EnableEmailVerification">Require Email Verification</label>
                            <div class="form-text">Require users to verify their email address before they can log in</div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="VerificationLinkExpirationHours" class="form-label">Verification Link Expiration (hours)</label>
                                    <input type="number" class="form-control" asp-for="VerificationLinkExpirationHours" min="1" max="72">
                                    <span asp-validation-for="VerificationLinkExpirationHours" class="text-danger"></span>
                                    <div class="form-text">How long the verification link remains valid (1-72 hours)</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-between">
                    <button type="button" class="btn btn-outline-primary" id="testEmailBtn">
                        <i class="fas fa-paper-plane me-1"></i> Send Test Email
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i> Save Settings
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Test Email Modal -->
<div class="modal fade" id="testEmailModal" tabindex="-1" aria-labelledby="testEmailModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="testEmailModalLabel">Send Test Email</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    Please save your settings before sending a test email.
                </div>
                <div class="form-group">
                    <label for="testEmailAddress" class="form-label">Test Email Address</label>
                    <input type="email" class="form-control" id="testEmailAddress" placeholder="your-email@example.com">
                    <div class="form-text">Enter the email address where you want to receive the test email</div>
                </div>
                <div id="testEmailResult" class="mt-3"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="sendTestEmailBtn">
                    <i class="fas fa-paper-plane me-1"></i> Send Test Email
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
            // Show test email modal
            $('#testEmailBtn').click(function() {
                $('#testEmailModal').modal('show');
            });

            // Send test email
            $('#sendTestEmailBtn').click(function() {
                var testEmail = $('#testEmailAddress').val();
                var $btn = $(this);
                var $result = $('#testEmailResult');
                
                if (!testEmail) {
                    $result.html('<div class="alert alert-danger">Please enter a valid email address.</div>');
                    return;
                }

                $btn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin me-1"></i> Sending...');
                $result.html('');

                $.ajax({
                    url: '@Url.Action("TestEmail", "EmailSettings")',
                    type: 'POST',
                    data: {
                        testEmail: testEmail,
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function(response) {
                        if (response.success) {
                            $result.html('<div class="alert alert-success"><i class="fas fa-check-circle me-2"></i>' + response.message + '</div>');
                        } else {
                            $result.html('<div class="alert alert-danger"><i class="fas fa-exclamation-circle me-2"></i>' + response.message + '</div>');
                        }
                    },
                    error: function() {
                        $result.html('<div class="alert alert-danger"><i class="fas fa-exclamation-circle me-2"></i>An error occurred while sending the test email.</div>');
                    },
                    complete: function() {
                        $btn.prop('disabled', false).html('<i class="fas fa-paper-plane me-1"></i> Send Test Email');
                    }
                });
            });
        });
    </script>
}
