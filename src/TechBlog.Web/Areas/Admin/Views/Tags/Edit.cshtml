@model TechBlog.Core.DTOs.UpdateTagDto

@{
    ViewData["Title"] = "Edit Tag";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0 text-gray-800">
        <i class="fas fa-edit me-2"></i>Edit Tag
    </h1>
    <div>
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-info me-2">
            <i class="fas fa-eye me-2"></i>View Tag
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to Tags
        </a>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card shadow">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Tag Information</h6>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input asp-for="Id" type="hidden" />
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Tag Name</label>
                        <div class="input-group">
                            <span class="input-group-text">#</span>
                            <input asp-for="Name" class="form-control" />
                        </div>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Description <span class="text-muted">(Optional)</span></label>
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="d-flex gap-3">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Save Changes
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-times me-2"></i>Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <!-- Tag Info -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Tag Information</h6>
            </div>
            <div class="card-body">
                <div class="mb-2">
                    <strong>Created:</strong> @Model.CreatedAt.ToString("MMM dd, yyyy")
                </div>
                <div class="mb-2">
                    <strong>Last Updated:</strong> @Model.UpdatedAt?.ToString("MMM dd, yyyy") ?? "Never"
                </div>
                <div class="mb-2">
                    <strong>Slug:</strong> <code>@Model.Slug</code>
                </div>
                <div class="mb-2">
                    <strong>Posts Count:</strong> @Model.PostsCount
                </div>
            </div>
        </div>

        <!-- Tag Preview -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Current Preview</h6>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label class="form-label">Tag appears as:</label>
                    <div>
                        <span class="badge bg-primary fs-6">#@Model.Name</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Guidelines -->
        <div class="card shadow">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Guidelines</h6>
            </div>
            <div class="card-body">
                <h6>Tag Name</h6>
                <ul class="small text-muted mb-3">
                    <li>Use lowercase letters</li>
                    <li>No spaces (use hyphens instead)</li>
                    <li>Keep it short and descriptive</li>
                    <li>Use existing tags when possible</li>
                </ul>

                @if (Model.PostsCount > 0)
                {
                    <div class="alert alert-warning">
                        <small>
                            <i class="fas fa-exclamation-triangle me-1"></i>
                            This tag is used in @Model.PostsCount posts. Changing the name will update the slug and may affect SEO.
                        </small>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
