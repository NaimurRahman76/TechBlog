@model TechBlog.Web.Areas.Admin.Models.TagListViewModel

@{
    ViewData["Title"] = "Manage Tags";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0 text-gray-800">
        <i class="fas fa-tags me-2"></i>Tags
    </h1>
    <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#createTagCollapse" aria-expanded="false" aria-controls="createTagCollapse">
        <i class="fas fa-plus me-2"></i>Create New Tag
    </button>
</div>

<div class="collapse" id="createTagCollapse">
    <div class="card shadow mb-4">
        <div class="card-header">
            <h6 class="m-0 font-weight-bold text-primary">Create a New Tag</h6>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                @Html.AntiForgeryToken()
                <div class="input-group">
                    <input type="text" name="name" class="form-control" placeholder="Enter new tag name..." required>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save me-2"></i>Save Tag
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Search and Filter -->
<div class="card shadow mb-4">
    <div class="card-body">
        <form method="get" class="row g-3 align-items-center">
            <div class="col-md-6">
                <input type="text" name="search" value="@ViewBag.CurrentSearch" class="form-control" placeholder="Search tags...">
            </div>
            <div class="col-md-3">
                <select name="sortBy" class="form-select">
                    <option value="name" selected="@(ViewBag.SortBy == "name")">Sort by Name</option>
                    <option value="posts" selected="@(ViewBag.SortBy == "posts")">Sort by Post Count</option>
                    <option value="created" selected="@(ViewBag.SortBy == "created")">Sort by Created Date</option>
                </select>
            </div>
            <div class="col-md-2">
                <select name="pageSize" class="form-select">
                    @{ var ps = (int)(ViewBag.PageSize ?? 10); }
                    <option value="10" selected="@(ps == 10)">10</option>
                    <option value="20" selected="@(ps == 20)">20</option>
                    <option value="50" selected="@(ps == 50)">50</option>
                </select>
            </div>
            <div class="col-md-1">
                <button type="submit" class="btn btn-outline-primary w-100">
                    <i class="fas fa-search me-2"></i>Filter
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Tags Grid -->
<div class="card shadow">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Tags (@Model.TotalCount)</h6>
    </div>
    <div class="card-body">
        @if (Model.Tags.Any())
        {
            <div class="row">
                @foreach (var tag in Model.Tags)
                {
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="card border-left-primary h-100">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <h5 class="card-title mb-0">
                                        <span class="badge bg-primary fs-6">#@tag.Name</span>
                                    </h5>
                                    <div class="dropdown">
                                        <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                            <i class="fas fa-ellipsis-v"></i>
                                        </button>
                                        <ul class="dropdown-menu">
                                            <li><a class="dropdown-item" asp-action="Details" asp-route-id="@tag.Id">
                                                <i class="fas fa-eye me-2"></i>View Details
                                            </a></li>
                                            <li><a class="dropdown-item" asp-action="Edit" asp-route-id="@tag.Id">
                                                <i class="fas fa-edit me-2"></i>Edit
                                            </a></li>
                                            @if (tag.PostsCount == 0)
                                            {
                                                <li><hr class="dropdown-divider"></li>
                                                <li><a class="dropdown-item text-danger" href="#" onclick="confirmDelete(@tag.Id, '@tag.Name')">
                                                    <i class="fas fa-trash me-2"></i>Delete
                                                </a></li>
                                            }
                                        </ul>
                                    </div>
                                </div>
                                
                                @if (!string.IsNullOrEmpty(tag.Description))
                                {
                                    <p class="card-text text-muted small">@tag.Description</p>
                                }
                                else
                                {
                                    <p class="card-text text-muted small fst-italic">No description</p>
                                }
                                
                                <div class="d-flex justify-content-between align-items-center">
                                    <small class="text-muted">
                                        <i class="fas fa-file-alt me-1"></i>@tag.PostsCount posts
                                    </small>
                                    <small class="text-muted">
                                        <i class="fas fa-calendar me-1"></i>@tag.CreatedAt.ToString("MMM dd")
                                    </small>
                                </div>
                                
                                <div class="mt-2">
                                    <code class="small">@tag.Slug</code>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Pagination -->
            @if (Model.TotalPages > 1)
            {
                <nav aria-label="Tags pagination">
                    <ul class="pagination justify-content-center">
                        @if (Model.CurrentPage > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-route-page="@(Model.CurrentPage - 1)" asp-route-search="@ViewBag.CurrentSearch" asp-route-pageSize="@ViewBag.PageSize">Previous</a>
                            </li>
                        }

                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                <a class="page-link" asp-route-page="@i" asp-route-search="@ViewBag.CurrentSearch" asp-route-pageSize="@ViewBag.PageSize">@i</a>
                            </li>
                        }

                        @if (Model.CurrentPage < Model.TotalPages)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-route-page="@(Model.CurrentPage + 1)" asp-route-search="@ViewBag.CurrentSearch" asp-route-pageSize="@ViewBag.PageSize">Next</a>
                            </li>
                        }
                    </ul>
                </nav>
            }
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-tags fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">No tags found</h5>
                <p class="text-muted">Start by creating your first tag to organize your blog posts.</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>Create First Tag
                </a>
            </div>
        }
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete the tag "<span id="deleteTagName"></span>"?</p>
                <p class="text-danger"><small>This action cannot be undone.</small></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="post" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(tagId, tagName) {
            document.getElementById('deleteTagName').textContent = tagName;
            document.getElementById('deleteForm').action = '@Url.Action("Delete")/' + tagId;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }
    </script>
}
