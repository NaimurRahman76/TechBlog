@model TechBlog.Core.Entities.RecaptchaSettings

@{
    ViewData["Title"] = "reCAPTCHA Settings";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">reCAPTCHA Settings</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
        <li class="breadcrumb-item active">reCAPTCHA Settings</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-shield-alt me-1"></i>
            Google reCAPTCHA Configuration
        </div>
        <div class="card-body">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="alert alert-info">
                <i class="fas fa-info-circle me-2"></i>
                To enable reCAPTCHA, you need to register your site at 
                <a href="https://www.google.com/recaptcha/admin" target="_blank">Google reCAPTCHA Admin</a> 
                and enter your site key and secret key below.
            </div>

            <form asp-action="Update" method="post">
                <div class="form-check form-switch mb-4">
                    <input class="form-check-input" type="checkbox" asp-for="IsEnabled">
                    <label class="form-check-label" asp-for="IsEnabled">Enable reCAPTCHA</label>
                    <div class="form-text">Enable or disable reCAPTCHA validation for all protected forms.</div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="SiteKey" class="form-label">Site Key</label>
                            <input type="text" class="form-control" asp-for="SiteKey">
                            <span asp-validation-for="SiteKey" class="text-danger"></span>
                            <div class="form-text">Your Google reCAPTCHA site key</div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="SecretKey" class="form-label">Secret Key</label>
                            <input type="password" class="form-control" asp-for="SecretKey" value="@Model?.SecretKey">
                            <span asp-validation-for="SecretKey" class="text-danger"></span>
                            <div class="form-text">Your Google reCAPTCHA secret key</div>
                        </div>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="ScoreThreshold" class="form-label">Score Threshold</label>
                            <input type="number" step="0.1" min="0.1" max="1.0" class="form-control" asp-for="ScoreThreshold">
                            <span asp-validation-for="ScoreThreshold" class="text-danger"></span>
                            <div class="form-text">Higher values (up to 1.0) mean stricter verification</div>
                        </div>
                    </div>
                </div>

                <div class="card mb-4">
                    <div class="card-header">
                        <i class="fas fa-tasks me-1"></i>
                        Form Settings
                    </div>
                    <div class="card-body">
                        <div class="form-check form-switch mb-3">
                            <input class="form-check-input" type="checkbox" asp-for="EnableForLogin">
                            <label class="form-check-label" asp-for="EnableForLogin">Enable for Login Form</label>
                            <div class="form-text">Enable reCAPTCHA for the user login form</div>
                        </div>

                        <div class="form-check form-switch mb-3">
                            <input class="form-check-input" type="checkbox" asp-for="EnableForRegistration">
                            <label class="form-check-label" asp-for="EnableForRegistration">Enable for Registration Form</label>
                            <div class="form-text">Enable reCAPTCHA for the user registration form</div>
                        </div>

                        <div class="form-check form-switch mb-3">
                            <input class="form-check-input" type="checkbox" asp-for="EnableForComments">
                            <label class="form-check-label" asp-for="EnableForComments">Enable for Comment Forms</label>
                            <div class="form-text">Enable reCAPTCHA for blog post comments</div>
                        </div>
                    </div>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i> Save Settings
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
