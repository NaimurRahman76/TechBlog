@model TechBlog.Web.Models.HomeViewModel

@{
    ViewData["Title"] = "TechBlog - Development & Electronics Blog";
}

<!-- Hero Section -->
<section class="hero-section bg-primary text-white py-5 mb-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h1 class="display-4 fw-bold mb-3">
                    <i class="fas fa-code me-3"></i>TechBlog
                </h1>
                <p class="lead mb-4">
                    Your go-to source for the latest in software development, electronics, and technology insights.
                    Explore tutorials, reviews, and expert analysis from industry professionals.
                </p>
                <div class="d-flex gap-3">
                    <a href="#latest-posts" class="btn btn-light btn-lg">
                        <i class="fas fa-book-open me-2"></i>Read Latest Posts
                    </a>
                    <a asp-controller="Home" asp-action="About" class="btn btn-outline-light btn-lg">
                        <i class="fas fa-info-circle me-2"></i>Learn More
                    </a>
                </div>
            </div>
            <div class="col-lg-4 text-center">
                <i class="fas fa-laptop-code" style="font-size: 8rem; opacity: 0.3;"></i>
            </div>
        </div>
    </div>
</section>

<!-- Featured Categories -->
<section class="categories-section mb-5">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-5">
            <h2 class="mb-0">
                <i class="fas fa-folder-open me-2"></i>Explore Categories
            </h2>
            @{
                var categoryCount = Model.Categories?.Count() ?? 0;
                var showViewAll = categoryCount > 6;
            }
            @if (showViewAll)
            {
                <a asp-controller="Blog" asp-action="Categories" class="btn btn-outline-primary">
                    View All <i class="fas fa-arrow-right ms-1"></i>
                </a>
            }
        </div>
        <div class="row">
            @if (categoryCount > 0)
            {
                @foreach (var category in Model.Categories.Take(6))
                {
                    <div class="col-md-4 mb-4">
                        <div class="card h-100 shadow-sm">
                            <div class="card-body text-center">
                                <i class="fas fa-folder fa-3x text-primary mb-3"></i>
                                <h5 class="card-title">@category.Name</h5>
                                <p class="card-text">@(category.Description ?? "Explore posts in this category")</p>
                                <a asp-controller="Blog" asp-action="Category" asp-route-slug="@category.Slug" class="btn btn-outline-primary">
                                    View @(category.PostsCount > 0 ? $"({category.PostsCount})" : "") Posts
                                </a>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12 text-center">
                    <p class="text-muted">No categories available yet.</p>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-area="Admin" asp-controller="Categories" asp-action="Create" class="btn btn-primary">Create First Category</a>
                    }
                </div>
            }
        </div>
    </div>
</section>

<!-- Latest Posts -->
<section id="latest-posts" class="latest-posts-section mb-5">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>
                <i class="fas fa-newspaper me-2"></i>Latest Posts
            </h2>
            <a asp-controller="Blog" asp-action="Index" class="btn btn-primary">
                <i class="fas fa-arrow-right me-2"></i>View All Posts
            </a>
        </div>
        
        <div class="row">
            @if (Model.RecentPosts.Any())
            {
                @foreach (var post in Model.RecentPosts)
                {
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="card h-100 shadow-sm">
                            @if (!string.IsNullOrEmpty(post.FeaturedImageUrl))
                            {
                                <img src="@post.FeaturedImageUrl" class="card-img-top" style="height: 200px; object-fit: cover;" alt="@post.Title">
                            }
                            else
                            {
                                <div class="bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                    <i class="fas fa-image fa-3x text-muted"></i>
                                </div>
                            }
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <span class="badge bg-primary">@post.CategoryName</span>
                                    <small class="text-muted">@post.CreatedAt.ToString("MMM dd")</small>
                                </div>
                                <h5 class="card-title">
                                    <a href="/blog/@post.Slug" class="text-decoration-none">@post.Title</a>
                                </h5>
                                <p class="card-text">@post.Summary</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <small class="text-muted">By @post.AuthorName</small>
                                    <small class="text-muted">@post.ViewCount views</small>
                                </div>
                                @if (post.Tags.Any())
                                {
                                    <div class="mt-2">
                                        @foreach (var tag in post.Tags)
                                        {
                                            <span class="badge bg-light text-dark me-1">#@tag</span>
                                        }
                                    </div>
                                }
                            </div>
                            <div class="card-footer bg-transparent">
                                <a href="/blog/@post.Slug" class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-arrow-right me-1"></i>Read More
                                </a>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12">
                    <div class="text-center text-muted py-5">
                        <i class="fas fa-file-alt fa-4x mb-3"></i>
                        <h4>No posts yet</h4>
                        <p>Check back soon for exciting content about development and electronics!</p>
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-area="Admin" asp-controller="BlogPosts" asp-action="Create" class="btn btn-primary">
                                <i class="fas fa-plus me-2"></i>Create First Post
                            </a>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- Newsletter Section -->
<section class="newsletter-section bg-light py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
                <h3 class="mb-3">
                    <i class="fas fa-envelope me-2"></i>Stay Updated
                </h3>
                <p class="mb-4">Get the latest posts and tech insights delivered to your inbox.</p>
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <div class="input-group">
                            <input type="email" class="form-control" placeholder="Enter your email address">
                            <button class="btn btn-primary" type="button">
                                <i class="fas fa-paper-plane me-2"></i>Subscribe
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
.hero-section {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.card {
    transition: transform 0.2s;
}

.card:hover {
    transform: translateY(-5px);
}

.categories-section .card-body {
    padding: 2rem;
}

.newsletter-section {
    background-color: #f8f9fa !important;
}
</style>
