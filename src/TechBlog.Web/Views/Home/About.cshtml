@{
    ViewData["Title"] = "About TechBlog";
}

<div class="container py-5">
    <!-- Header Section -->
    <div class="row mb-5">
        <div class="col-lg-8 mx-auto text-center">
            <h1 class="display-4 fw-bold text-primary mb-3">
                <i class="fas fa-info-circle me-3"></i>About TechBlog
            </h1>
            <p class="lead text-muted">
                Your trusted source for cutting-edge technology insights, development tutorials, and electronics expertise.
            </p>
        </div>
    </div>

    <!-- Mission Section -->
    <div class="row mb-5">
        <div class="col-lg-6 mb-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body p-4">
                    <div class="text-center mb-3">
                        <i class="fas fa-bullseye fa-3x text-primary"></i>
                    </div>
                    <h3 class="card-title text-center mb-3">Our Mission</h3>
                    <p class="card-text">
                        To democratize technology knowledge by providing high-quality, accessible content that empowers 
                        developers, engineers, and tech enthusiasts to build innovative solutions and advance their careers.
                    </p>
                </div>
            </div>
        </div>
        <div class="col-lg-6 mb-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body p-4">
                    <div class="text-center mb-3">
                        <i class="fas fa-eye fa-3x text-success"></i>
                    </div>
                    <h3 class="card-title text-center mb-3">Our Vision</h3>
                    <p class="card-text">
                        To become the go-to platform where technology professionals and enthusiasts converge to share 
                        knowledge, learn from each other, and shape the future of technology together.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- What We Cover -->
    <div class="row mb-5">
        <div class="col-12">
            <h2 class="text-center mb-5">
                <i class="fas fa-laptop-code me-2"></i>What We Cover
            </h2>
            <div class="row">
                <div class="col-md-4 mb-4">
                    <div class="text-center">
                        <i class="fas fa-code fa-3x text-primary mb-3"></i>
                        <h4>Software Development</h4>
                        <ul class="list-unstyled text-muted">
                            <li>Web Development (ASP.NET, React, Angular)</li>
                            <li>Mobile Development (iOS, Android)</li>
                            <li>Desktop Applications</li>
                            <li>DevOps & Cloud Computing</li>
                            <li>Best Practices & Design Patterns</li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="text-center">
                        <i class="fas fa-microchip fa-3x text-success mb-3"></i>
                        <h4>Electronics & Hardware</h4>
                        <ul class="list-unstyled text-muted">
                            <li>Circuit Design & Analysis</li>
                            <li>Embedded Systems (Arduino, Raspberry Pi)</li>
                            <li>PCB Design & Manufacturing</li>
                            <li>IoT Projects & Solutions</li>
                            <li>Hardware Reviews & Comparisons</li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="text-center">
                        <i class="fas fa-rocket fa-3x text-warning mb-3"></i>
                        <h4>Emerging Technologies</h4>
                        <ul class="list-unstyled text-muted">
                            <li>Artificial Intelligence & Machine Learning</li>
                            <li>Blockchain & Cryptocurrency</li>
                            <li>Quantum Computing</li>
                            <li>Augmented & Virtual Reality</li>
                            <li>Industry Trends & Analysis</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Team Section -->
    <div class="row mb-5">
        <div class="col-12">
            <h2 class="text-center mb-5">
                <i class="fas fa-users me-2"></i>Our Team
            </h2>
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="card shadow-sm border-0">
                        <div class="card-body p-4 text-center">
                            <i class="fas fa-user-circle fa-4x text-primary mb-3"></i>
                            <h4>Expert Contributors</h4>
                            <p class="text-muted">
                                Our content is created by experienced software developers, electronics engineers, 
                                and technology professionals who are passionate about sharing their knowledge and 
                                helping others grow in their tech journey.
                            </p>
                            <div class="row mt-4">
                                <div class="col-md-4">
                                    <i class="fas fa-graduation-cap fa-2x text-primary mb-2"></i>
                                    <h6>10+ Years Experience</h6>
                                </div>
                                <div class="col-md-4">
                                    <i class="fas fa-certificate fa-2x text-success mb-2"></i>
                                    <h6>Industry Certified</h6>
                                </div>
                                <div class="col-md-4">
                                    <i class="fas fa-heart fa-2x text-danger mb-2"></i>
                                    <h6>Passionate Educators</h6>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Contact Section -->
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card shadow-sm border-0 bg-light">
                <div class="card-body p-5 text-center">
                    <h3 class="mb-3">
                        <i class="fas fa-envelope me-2"></i>Get In Touch
                    </h3>
                    <p class="text-muted mb-4">
                        Have questions, suggestions, or want to contribute? We'd love to hear from you!
                    </p>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <a href="mailto:contact@techblog.com" class="btn btn-outline-primary btn-lg w-100">
                                <i class="fas fa-envelope me-2"></i>Email Us
                            </a>
                        </div>
                        <div class="col-md-6 mb-3">
                            <a href="#" class="btn btn-outline-success btn-lg w-100">
                                <i class="fab fa-github me-2"></i>Contribute
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.card {
    transition: transform 0.2s ease-in-out;
}

.card:hover {
    transform: translateY(-5px);
}

.list-unstyled li {
    padding: 0.25rem 0;
}

.bg-light {
    background-color: #f8f9fa !important;
}
</style>
