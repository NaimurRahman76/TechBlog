@model TechBlog.Web.Models.BlogCategoryViewModel

@{
    ViewData["Title"] = Model.Category.Name + " - TechBlog";
}

<div class="container py-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Blog" asp-action="Index">Blog</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@Model.Category.Name</li>
                </ol>
            </nav>
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="display-5 fw-bold text-primary">
                        <i class="fas fa-folder me-2"></i>@Model.Category.Name
                    </h1>
                    @if (!string.IsNullOrEmpty(Model.Category.Description))
                    {
                        <p class="lead text-muted">@Model.Category.Description</p>
                    }
                    <p class="text-muted">
                        <i class="fas fa-file-alt me-1"></i>@Model.Posts.Count() posts in this category
                    </p>
                </div>
                <a asp-controller="Blog" asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>All Posts
                </a>
            </div>
        </div>
    </div>

    <!-- Posts -->
    <div class="row">
        <div class="col-lg-8">
            @if (Model.Posts.Any())
            {
                @foreach (var post in Model.Posts)
                {
                    <div class="card mb-4 shadow-sm">
                        <div class="row g-0">
                            <div class="col-md-4">
                                <div class="bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                    <i class="fas fa-image fa-3x text-muted"></i>
                                </div>
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <span class="badge bg-primary">@post.CategoryName</span>
                                        <small class="text-muted">
                                            <i class="fas fa-calendar me-1"></i>@post.CreatedAt.ToString("MMM dd, yyyy")
                                        </small>
                                    </div>
                                    <h5 class="card-title">
                                        <a asp-action="Details" asp-route-slug="@post.Slug" class="text-decoration-none">@post.Title</a>
                                    </h5>
                                    <p class="card-text">@post.Summary</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-user-circle me-2 text-muted"></i>
                                            <small class="text-muted">By @post.AuthorName</small>
                                        </div>
                                        <div class="d-flex gap-3">
                                            <small class="text-muted">
                                                <i class="fas fa-eye me-1"></i>@post.ViewCount views
                                            </small>
                                        </div>
                                    </div>
                                    @if (post.Tags.Any())
                                    {
                                        <div class="mt-2">
                                            @foreach (var tag in post.Tags)
                                            {
                                                <a asp-action="Tag" asp-route-slug="@tag.ToLower().Replace(" ", "-")" class="badge bg-secondary text-decoration-none me-1">#@tag</a>
                                            }
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-folder-open fa-4x text-muted mb-3"></i>
                    <h3 class="text-muted">No posts in this category yet</h3>
                    <p class="text-muted">Check back soon for exciting content in @Model.Category.Name!</p>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-area="Admin" asp-controller="BlogPosts" asp-action="Create" class="btn btn-primary">
                            <i class="fas fa-plus me-2"></i>Create First Post
                        </a>
                    }
                </div>
            }
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Category Info -->
            <div class="card mb-4">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="fas fa-info-circle me-2"></i>Category Information
                    </h6>
                </div>
                <div class="card-body">
                    <div class="mb-2">
                        <strong>Name:</strong> @Model.Category.Name
                    </div>
                    @if (!string.IsNullOrEmpty(Model.Category.Description))
                    {
                        <div class="mb-2">
                            <strong>Description:</strong> @Model.Category.Description
                        </div>
                    }
                    <div class="mb-2">
                        <strong>Posts:</strong> @Model.Posts.Count()
                    </div>
                    <div class="mb-2">
                        <strong>Created:</strong> @Model.Category.CreatedAt.ToString("MMM dd, yyyy")
                    </div>
                </div>
            </div>

            <!-- Other Categories -->
            <div class="card mb-4">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="fas fa-folder me-2"></i>Other Categories
                    </h6>
                </div>
                <div class="card-body">
                    <div class="text-muted text-center py-3">
                        <i class="fas fa-folder-open fa-2x mb-2"></i>
                        <p class="mb-0">Browse all categories</p>
                        <a asp-controller="Blog" asp-action="Index" class="btn btn-sm btn-outline-primary mt-2">View All Posts</a>
                    </div>
                </div>
            </div>

            <!-- Newsletter Widget -->
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h6 class="mb-0">
                        <i class="fas fa-envelope me-2"></i>Newsletter
                    </h6>
                </div>
                <div class="card-body">
                    <p class="card-text">Stay updated with our latest posts and tech insights.</p>
                    <div class="mb-3">
                        <input type="email" class="form-control" placeholder="Your email address">
                    </div>
                    <button class="btn btn-primary w-100">
                        <i class="fas fa-paper-plane me-2"></i>Subscribe
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
